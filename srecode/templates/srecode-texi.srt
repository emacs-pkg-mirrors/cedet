set mode "texinfo-mode"

set escape_start "$"
set escape_end "$"
set DOLLAR "$"

context file

prompt NAME "Name of manual: "

template empty :file :user :time
"Fill a new texinfo file with some baseline stuff."
----
\input texinfo   @c -*-texinfo-*-
$#RCS$
@c
@c $Id: srecode-texi.srt,v 1.2 2008/01/26 02:45:52 zappo Exp $
@c
$/RCS$
@c %**start of header
@setfilename $FILE$
@set TITLE $?NAME$
@set AUTHOR $?AUTHOR$
@settitle @value{TITLE}
@c %**end of header

@ifinfo
@format
START-INFO-DIR-ENTRY
* $FILE$: ($FILE$).       $NAME$
END-INFO-DIR-ENTRY
@end format
@end ifinfo

@titlepage
@sp 10
@center @titlefont{$FILE$}
@vskip 0pt plus 1 fill
Copyright @copyright{} $YEAR$ $AUTHOR$
@end titlepage

@node Top
@top @value{TITLE}

$^$

@menu
@end menu




@node Index
@chapter Index

@contents

@bye
----

prompt NAME "Name of item: "

context declaration

;; Note to self: It would be cool to replace the junk in
;; semantic/document.el with macros from here.
template function :tag
"Import some function tag into texinfo."
----
@deffn $NAME$$#ARGS$ $NAME$$/ARGS$
@anchor{$NAME$}
$TAG:semantic-tag-docstring$
@end deffn
----
bind "f"


template variable :tag
"Import some variable tag into texinfo"
----
@defvar $NAME$$#ARGS$ $NAME$$/ARGS$
@anchor{$NAME$}
$TAG:semantic-tag-docstring$
@end deffn
----
bind "v"

prompt NAME "Name of node: "

template node :texi
"Insert a node right about here."
----
@node $?NAME$
@$?LEVEL$ $NAME$


----
bind "n"


template menu
"Menu items for texinfo."
----
@menu
$^$
@end menu
----
bind "m"

prompt NAME "Menu item: "

template menuitem
"Insert a menu item."
----
* $?NAME$::	$^$

----


;; end