set escape_start "\\$"
set escape_end "\\$"

set mode "emacs-lisp-mode"

set comment_start  ";;;"
set comment_prefix  ";;"
set comment_end  ""

set DOLLAR "$"

context file

template empty :user :time :file
"Insert a skeleton for an Emacs Lisp file."
----
$>:filecomment$
;;; Commentary:
;;

;;; Code:

(provide '$FILE$)

;;; $FILENAME$ ends here

----

context declaration

template section-comment
"Insert a comment that separates sections of an Emacs Lisp file."
----
;;; $^$
;;
----

template function
"Insert a defun outline."
----
(defun $?NAME$ ()
  ""
  $^$)
----

template variable
"Inert a variable."
----
(defvar $^NAME$ $^$
  "")
----

template type
"Insert a new class."
----
(defclass $?NAME$ ()
   (($?ARG1$ :initarg :$ARG1$
             :documentation
	     "$^$")
   )
   "Class $NAME$ ")
----

;; end


